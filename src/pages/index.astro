---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactForm.astro';
import GoogleMap from '../components/GoogleMap.astro';
import Hero from '../components/Hero.astro';

const SERVICES = [
  {
    title: 'Elinstallation',
    description: 'Professionell installation av el i både hem och företag.',
    icon: 'installation',
  },
  {
    title: 'Elbilsladdare',
    description: 'Installation av laddboxar för alla typer av elbilar.',
    icon: 'charger',
  },
  {
    title: 'Akut hjälp',
    description: 'Jour dygnet runt för akuta elärenden.',
    icon: 'emergency',
  },
  {
    title: 'Renovering',
    description: 'Komplett elrenovering och uppgradering av äldre system.',
    icon: 'renovation',
  },
];

const TRUST_SIGNALS = [
  { number: '1000+', label: 'Nöjda kunder' },
  { number: '15+', label: 'Års erfarenhet' },
  { number: '24/7', label: 'Akut service' },
  { number: '100%', label: 'Certifierade elektriker' },
];

const schema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "Elektriker Södertälje",
  "image": "https://elektriker-södertälje.se/images/logo.png",
  "description": "Professionella elektriker i Södertälje. Vi erbjuder elinstallation, elbilsladdare, akut hjälp och renovering.",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "[Street]",
    "addressLocality": "Södertälje",
    "postalCode": "151 XX",
    "addressCountry": "SE"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": "59.1954",
    "longitude": "17.6255"
  },
  "url": "https://elektriker-södertälje.se",
  "email": "info@elektriker-södertälje.se",
  "telephone": "08-123 456 78",
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": [
        "Monday",
        "Tuesday",
        "Wednesday",
        "Thursday",
        "Friday"
      ],
      "opens": "07:00",
      "closes": "16:00"
  }
  ],
  "sameAs": [
    "https://facebook.com/",
    "https://instagram.com/",
    "https://linkedin.com/"
  ]
};
---

<Layout 
  title="Elektriker Södertälje | Jour 24/7 | Fast Pris | Elektriker Södertälje"
  description="Din lokala elektriker i Södertälje ✓ Jour dygnet runt ✓ Snabb service ✓ Fast pris ✓ Certifierade elektriker. Ring 08-123 456 78 för akut hjälp!"
>
  <Header slot="header" />
  
  <Hero
    badge="Din lokala elektriker"
    title="Elektriker i Södertälje – Få Hjälp Snabbt"
    description="Certifierade elektriker med jour dygnet runt. Fast pris och snabb service i hela Södertälje med omnejd."
    image="/images/hero.jpg"
    showCTA={true}
    showHighlights={true}
  />

  <!-- Trust Signals -->
  <section class="py-12 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {TRUST_SIGNALS.map(signal => (
          <div class="text-center">
            <p class="text-4xl font-bold text-primary-600">{signal.number}</p>
            <p class="text-gray-600">{signal.label}</p>
    </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Services -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">Våra tjänster</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {SERVICES.map(service => (
          <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100">
            <div class="text-primary-600 mb-4">
              {service.icon === 'installation' && (
                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              )}
              {service.icon === 'charger' && (
                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              )}
              {service.icon === 'emergency' && (
                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
              {service.icon === 'renovation' && (
                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21v-2a4 4 0 00-4-4H9a4 4 0 00-4 4v2" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3a4 4 0 100 8 4 4 0 000-8z" />
                </svg>
              )}
        </div>
            <h3 class="text-xl font-semibold mb-2">{service.title}</h3>
            <p class="text-gray-600">{service.description}</p>
        </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section id="contact" class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Kontakta oss</h2>
        <p class="text-gray-600">
          Behöver du hjälp med elarbete? Fyll i formuläret så återkommer vi med en offert inom 24 timmar.
        </p>
      </div>
      <ContactForm />
    </div>
  </section>

  <!-- Service Area Map -->
  <GoogleMap />

  <Footer slot="footer" />

  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />
</Layout>