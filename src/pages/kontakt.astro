---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactForm.astro';
import Hero from '../components/Hero.astro';

const CONTACT_INFO = {
  phone: '08-123 456 79',
  emergency: '08-123 456 78',
  email: 'info@elektriker-södertälje.se',
  address: '[Street], 151 XX Södertälje',
  hours: {
    weekdays: '07:00–16:00',
    emergency: '24/7',
  },
};

const schema = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": "Kontakta Elektriker Södertälje",
  "description": "Kontakta oss för elarbeten i Södertälje. Akut hjälp dygnet runt.",
  "mainEntity": {
    "@type": "LocalBusiness",
    "name": "Elektriker Södertälje",
    "telephone": CONTACT_INFO.phone,
    "email": CONTACT_INFO.email,
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "[Street]",
      "addressLocality": "Södertälje",
      "postalCode": "151 XX",
      "addressCountry": "SE"
    },
    "openingHoursSpecification": [
      {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": [
          "Monday",
          "Tuesday",
          "Wednesday",
          "Thursday",
          "Friday"
        ],
        "opens": "07:00",
        "closes": "16:00"
      }
    ]
  }
};
---

<Layout
  title="Kontakta oss | Elektriker Södertälje | Jour 24/7"
  description="Behöver du hjälp av en elektriker i Södertälje? Vi finns tillgängliga dygnet runt. ✓ Snabb service ✓ Fast pris ✓ Kostnadsfri offert. Ring 08-123 456 78!"
>
  <Header slot="header" />

  <Hero
    badge="Kontakta oss"
    title="Behöver du hjälp av en elektriker?"
    description="Vi finns här för dig – dygnet runt, året om. Snabb service och fasta priser i hela Södertälje med omnejd."
    image="/images/contact/hero.jpg"
    showCTA={true}
    showHighlights={true}
  />

  <!-- Contact Info Grid -->
  <section id="contact" class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Information -->
        <div>
          <h2 class="text-2xl font-bold mb-8">Kontaktinformation</h2>
          
          <!-- Emergency Contact -->
          <div class="bg-primary-50 rounded-lg p-6 mb-8">
            <h3 class="text-xl font-bold text-primary-700 mb-2">Akut hjälp 24/7</h3>
            <p class="text-gray-600 mb-4">
              Vid akuta elärenden finns vi tillgängliga dygnet runt, alla dagar om året.
            </p>
            <a
              href={`tel:${CONTACT_INFO.emergency}`}
              class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 w-full md:w-auto"
            >
              Ring {CONTACT_INFO.emergency}
            </a>
          </div>

          <!-- Contact Details -->
          <div class="space-y-6">
            <div>
              <h3 class="font-semibold mb-2">Telefon</h3>
              <p class="flex items-center text-gray-600">
                <svg class="w-5 h-5 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <a href={`tel:${CONTACT_INFO.phone}`} class="hover:text-primary-600">
                  {CONTACT_INFO.phone}
                </a>
              </p>
            </div>

            <div>
              <h3 class="font-semibold mb-2">E-post</h3>
              <p class="flex items-center text-gray-600">
                <svg class="w-5 h-5 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <a href={`mailto:${CONTACT_INFO.email}`} class="hover:text-primary-600">
                  {CONTACT_INFO.email}
                </a>
              </p>
            </div>

            <div>
              <h3 class="font-semibold mb-2">Besöksadress</h3>
              <p class="flex items-center text-gray-600">
                <svg class="w-5 h-5 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                {CONTACT_INFO.address}
              </p>
            </div>

            <div>
              <h3 class="font-semibold mb-2">Öppettider</h3>
              <div class="space-y-2 text-gray-600">
                <p class="flex items-center">
                  <svg class="w-5 h-5 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Mån–Fre: {CONTACT_INFO.hours.weekdays}
                </p>
                <p class="flex items-center">
                  <svg class="w-5 h-5 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                  </svg>
                  Akut jour: {CONTACT_INFO.hours.emergency}
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl font-bold mb-8">Skicka meddelande</h2>
          <ContactForm />
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Hitta till oss</h2>
        <p class="text-gray-600">
          Vi finns centralt belägna i Södertälje för att snabbt kunna nå dig vid behov.
        </p>
      </div>
      <div class="aspect-w-16 aspect-h-9 rounded-lg overflow-hidden shadow-lg">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d130287.77785644832!2d17.4981653!3d59.1953897!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x465f724c89064b13%3A0xbda5d7f509d19e69!2sS%C3%B6dert%C3%A4lje!5e0!3m2!1ssv!2sse!4v1234567890"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
      </div>
    </div>
  </section>

  <Footer slot="footer" />

  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />
</Layout> 